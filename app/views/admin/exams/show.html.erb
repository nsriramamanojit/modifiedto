 <div id="shellcontainer">
	<div id="shellleft">
		<div align="right"><a href="/admin/exams/edit/<%= @exam.id %>"><b>Edit this Exam</b></a>|<a href="/admin/exams/index"><b>Back</b></a></div><br>
		<table class="main_form"  cellspacing="0" cellpadding="4" border="0"  width="700">			
				<tr><td colspan="2" align="center"><h3><font color="#993300">Exam Details</font></h3></td>	</tr>			
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Exam Template Id :</font></strong></td>					
					<td> <%= Admin::Examtemplate.find(@exam.ExamTemplate_Id).TemplateName %></td>
				</tr>				
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Exam Name :</font></strong></td>					
					<td> <%= @exam.ExamName %></td></td>
				</tr>				
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">In The Year :</font></strong></td>					
					<td><%= @exam.InTheYear %></td>
			    </tr>				
					<tr><td align="right" valign="top" class="label"><strong><font color="#993300">In The Month :</font></strong></td>	
					<td><%= @exam.InTheMonth %></td>
			    </tr>								
					<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Exam Status :</font></strong></td>						
					<td><%= if @exam.ExamStatus == '1' 
						"Enabled" 
							else 
						"Disabled"
						end %> </td>
			    </tr>				
					<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Number Of Days Scheduled :</font></strong></td>	
					<td><%= @exam.NumDaysScheduled  %></td>
			    </tr>								
					<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Starting Date :</font></strong></td>	
					<td><%= @exam.ExamStartDate.strftime("%d/%m/%Y") %></td>
			    </tr>								
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Description :</font></strong></td>	
					<td><textarea  rows="3" cols="35" readonly="true" ><%= @exam.ExamDescription %></textarea></td>
			    </tr>				
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Comments :</font></strong></td>				
					<td> <textarea  rows="3" cols="35" readonly="true" ><%= @exam.comments %></textarea></td>			
			    </tr>
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Created on :</font></strong></td>							
					<td><%=h @exam.created_at.strftime("%d/%m/%Y at %I:%M%p") %></td>	
			    </tr>
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Updated on :</font></strong></td>							
					<td><%=h @exam.updated_at.strftime("%d/%m/%Y at %I:%M%p") %></td>	
			    </tr>
				<tr><td colspan="2">&nbsp;</td></tr>
		</table>
		<br />
    </div>	
		<!--Related Information -->
			<% admin_relavant_info @exams do |sub|%>
			<a href="/admin/exams/show/<%=sub.id%>"><%=sub.ExamName%></a><br/>
				<% end %>					
</div>

 
 
 
 
 
 
 
 
 
 
 
 
 
 
	