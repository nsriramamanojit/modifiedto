<div id="shellcontainer">
	<div id="shellleft">
		<div align="right"><a href="/admin/services/edit/<%= @service.id %>"><b>Edit this Service</b></a>|<a href="/admin/services/index"><b>Back</b></a></div><br/>		
		<table class="main_form"  cellspacing="0" cellpadding="4" border="0" width="700">
				<tr><td colspan="2" align="center"><h3><font color="#993300">Services Details</font></h3></td>	</tr>			
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Service Name :</font></strong></td>	
					<td> <%=@service.service_name%></td>
				</tr>							
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Service Type :</font></strong></td>					
					<td><%=Admin::Servicetype.find(@service.servicetype_id,:select => 'service_type').service_type%></td>
			    </tr>
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Mode :</font></strong></td>					
					<td><%=@service.service_mode%></td>
			    </tr>							
					<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Description :</font></strong></td>			
					<td><textarea  rows="3" cols="35" readonly="true" ><%=@service.service_description%></textarea></td>	
			    </tr>								
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Payment Required :</font></strong></td>				
					<td><% if @service.payment_required == true %>
					Yes
					<%else%>
					No
					<%end%></td>
			    </tr>								
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Service Charge :</font></strong></td>					
					<td><%=@service.servicechargeamount%></td>
			    </tr>								
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Status :</font></strong></td>				
					<td><% if @service.service_status == '1' %>
					Active
					<%else%>
					InActive
					<%end%></td>					
			    </tr>							
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Service Enabled :</font></strong></td>	
								
					<td><% if @service.service_enabled == true %>
					True
					<%else%>
					False
					<%end%></td>					
			    </tr>	
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Service StartDate :</font></strong></td>						
					<td> <%=@service.service_register_begindate.strftime("%d/%m/%Y")%></td>	
			    </tr>
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Service EndDate :</font></strong></td>						
					<td><%=@service.service_register_lastdate.strftime("%d/%m/%Y")%></td>	
			    </tr>			
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Comments :</font></strong></td>						
					<td> <textarea  rows="3" cols="35" readonly="true" ><%=@service.comments%></textarea></td>	
			    </tr>
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Created on :</font></strong></td>							
					<td><%=h @service.created_at.strftime("%d/%m/%Y at %I:%M%p") %></td>	
			    </tr>
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Updated on :</font></strong></td>							
					<td><%=h @service.updated_at.strftime("%d/%m/%Y at %I:%M%p") %></td>	
			    </tr>
				<tr><td colspan="2">&nbsp;</td></tr>
		</table><br/>
 </div>
			<!--Related Information -->
			<% admin_relavant_info @services do |temp|%>
			<a href="/admin/services/show/<%=temp.id%>"><%=temp.service_name%></a><br/>
				<% end %>
</div>	






