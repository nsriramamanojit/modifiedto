<div id="shellcontainer">
	<div id="shellleft">
		<div align="right"><a href="/admin/subject/edit/<%= @subject.id %>"><b>Edit this Subject</b></a>|<a href="/admin/subject/list"><b>Back</b></a></div><br>
		<table class="main_form"  cellspacing="0" cellpadding="4" border="0"  width="700">
				<tr><td colspan="2" align="center"><h3><font color="#993300">Section Information</font></h3></td></tr>				
				<tr>
					<td align="right" valign="top" class="label"><strong><font color="#993300">Subject Code :</font></strong></td>									
					<td> <%= @subject.subject_code %></td>
				</tr>				
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Subject Name :</font></strong></td>							
					<td> <%= @subject.subject_name %></td>
				</tr>
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Last Question Number :</font></strong></td>									
					<td> <%= @subject.last_question_number %></td>
				</tr>				
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Section Description :</font></strong></td>				
					<td> <textarea  rows="3" cols="35" readonly="true" ><%= @subject.subject_description %></textarea></td>
			    </tr>							
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Comments :</font></strong></td>							
					<td> <textarea  rows="3" cols="35" readonly="true" ><%= @subject.comments %></textarea></td>	
			    </tr>
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Created on :</font></strong></td>							
					<td><%=h @subject.created_at.strftime("%d/%m/%Y at %I:%M%p") %></td>	
			    </tr>
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Updated on :</font></strong></td>							
					<td><%=h @subject.updated_at.strftime("%d/%m/%Y at %I:%M%p") %></td>	
			    </tr>
				<tr><td colspan="2">&nbsp;</td></tr>
		</table><br>
		<br />
    </div>	
		<!--Related Information -->
			<% admin_relavant_info @subjects do |sub|%>
			<a href="/admin/subject/show/<%=sub.id%>"><%=sub.subject_name%></a><br/>
				<% end %>					
</div>
