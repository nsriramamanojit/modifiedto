<div id="shellcontainer">
	<div id="shellleft">
			<div align="right"><a href="/admin/servicetypes/edit/<%= @servicetype.id %>"><b>Edit this Servicetype</b></a>|<a href="/admin/servicetypes/index"><b>Back</b></a></div><br>
		<table class="main_form"  cellspacing="0" cellpadding="4" border="0"  width="700">
				<tr><td colspan="5" align="center"><h3><font color="#993300">ServieceType Information</font></h3></td></tr>		
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">ServiceType Name :</font></strong></td>	
					<td> <%= @servicetype.service_type %></td>
				</tr>				
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Description :</font></strong></td>	
					<td><textarea  rows="3" cols="35" readonly="true" > <%= @servicetype.servicetype_description %></textarea></td>	
				</tr>								
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Enabled :</font></strong></td>	
					<td><% if @servicetype.servicetype_enabled == true %>
					True
					<%else%>
					False
					<%end%></td>
			    </tr>							
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Comments :</font></strong></td>	
					<td> <textarea  rows="3" cols="35" readonly="true" ><%= @servicetype.comments %></textarea></td>			
			    </tr>
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Created on :</font></strong></td>							
					<td><%=h @servicetype.created_at.strftime("%d/%m/%Y at %I:%M%p") %></td>	
			    </tr>
				<tr><td align="right" valign="top" class="label"><strong><font color="#993300">Updated on :</font></strong></td>							
					<td><%=h @servicetype.updated_at.strftime("%d/%m/%Y at %I:%M%p") %></td>	
			    </tr>
				<tr><td colspan="2">&nbsp;</td></tr>
				
		</table>
		<br />
    </div>	
		<!--Related Information -->
			<% admin_relavant_info @servicetypes do |sub|%>
			<a href="/admin/servicetypes/show/<%=sub.id%>"><%=sub.service_type%></a><br/>
				<% end %>					
</div>



